{% block additional_scripts %}
<script>
document.addEventListener('DOMContentLoaded', () => {
    // Target the elements you want to animate
    const h1 = document.querySelector('.main_heading');
    const h3 = document.querySelector('.main_subheading');

    // Wrap each character in a <span> using SplitText
    const splitH1 = new SplitText(h1, { type: 'chars' });
    const splitH3 = new SplitText(h3, { type: 'chars' });

    // Animation using GSAP
    gsap.timeline({ defaults: { duration: 0.5, ease: 'circ.in' } })
        .from(splitH1.chars, { duration: 0.5, opacity: 0, stagger: 0.02 }, '+=0.5')
        .from(splitH3.chars, { duration: 0.5, opacity: 0, stagger: 0.01 }, '-=0.1');

})
</script>
